@model dynamic


<div data-role="grid" data-bind="source: reminders"></div>
<input type="text" data-bind="value: nameValue" />
<input data-role="datepicker" data-bind="value: dateValue"/>
<input type="button" value="Add Reminder" data-bind="{click: addReminders}" />
<script>
    var viewModel = kendo.observable({
        reminders: [
            { Name: "Watch Batman", Date: new Date("2012/7/21") },
            { Name: "Get Batman Halloween Costume", Date: new Date("2012/10/30") },
            { Name: "Save World", Date: new Date("2012/12/21") }
        ],
        nameValue: "",
        dateValue: new Date(),
        addReminders: function () {
            this.get('reminders').push({Name: this.get('nameValue'), Date: this.get('dateValue')});
        }
    });

    kendo.bind($('body'), viewModel);
</script>